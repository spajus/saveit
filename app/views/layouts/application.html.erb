<!DOCTYPE html>
<html>
<head>
  <title>Bm</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>
<body>

<%= content_tag "div", "", id: "backbone-settings", data: { settings: backbone_settings } %>

<% if current_user %>
  <%= render 'nav' %>
<% else %>
  <%= render 'nav.anonymous' %>
<% end %>

<div class="container">
  <%= render 'alerts' %>
  <%= yield %>
</div>

</body>
</html>
