function bm_add_new() {
    var d=document,s=d.createElement('scr'+'ipt'), l=d.location;
    s.setAttribute('src', '<%= url_for action: "bookmarklet" %>?b='
            + encodeURIComponent(l.href)
            + '&t=' + encodeURIComponent(d.getElementsByTagName('title')[0].innerHTML)
            +'&s='+(new Date().getTime()));
    d.body.appendChild(s);
};
bm_add_new();