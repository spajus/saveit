<div class="row-fluid">
  <div class="span12">
    <div id="app-alerts">
      <% if flash %>
        <% flash.each do |name, msg| %>
          <%= content_tag "div", class: "alert alert-#{name}" do -%>
            <button class="close" data-dismiss="alert">x</button>
            <%= msg %>
          <% end %>
        <% end -%>
      <% end %>
    </div>
  </div>
</div>
